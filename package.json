{
  "name": "@vanlong2712/layout-ui",
  "version": "0.1.0",
  "description": "A React component library featuring a powerful multi-select with virtualization, drag-and-drop sorting, and overflow chip management. Built with Tailwind CSS v4.",
  "repository": {
    "type": "git",
    "url": "https://github.com/vanlong2712/layout-ui.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./layout/select": {
      "import": {
        "types": "./dist/layout/select.d.ts",
        "default": "./dist/layout/select.js"
      },
      "require": {
        "types": "./dist/layout/select.d.cts",
        "default": "./dist/layout/select.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "keywords": [
    "react",
    "select",
    "multi-select",
    "combobox",
    "drag-and-drop",
    "virtualized",
    "tailwindcss",
    "layout",
    "component-library"
  ],
  "author": "vanlong2712",
  "license": "MIT",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "build:lib": "tsup",
    "preview": "vite preview",
    "test": "vitest run",
    "lint": "eslint",
    "format": "prettier",
    "check": "prettier --write . && eslint --fix",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@base-ui/react": "^1.2.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@tanstack/react-virtual": "^3.13.18",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.561.0",
    "tailwind-merge": "^3.0.2"
  },
  "devDependencies": {
    "@dnd-kit/utilities": "^3.2.2",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/devtools-vite": "^0.3.11",
    "@tanstack/eslint-config": "^0.3.0",
    "@tanstack/query-db-collection": "^1.0.8",
    "@tanstack/react-db": "^0.1.1",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-form": "^1.0.0",
    "@tanstack/react-query": "^5.66.5",
    "@tanstack/react-query-devtools": "^5.84.2",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "class-variance-authority": "^0.7.1",
    "ethers": "^6.16.0",
    "jsdom": "^27.0.0",
    "nitro": "latest",
    "prettier": "^3.5.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.6",
    "tsup": "^8.5.1",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^6.0.2",
    "vitest": "^3.0.5",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.11"
  }
}
